{
    "name": "darwinia-bot",
    "version": "0.0.1",
    "description": "Rush as bot",
    "main": "lib/index.js",
    "repository": "git@github.com:clearloop/tob.git",
    "author": "darwinia-network <hello@darwiia.network>",
    "license": "GPL-3.0",
    "private": true,
    "dependencies": {
        "@polkadot/api": "^1.9.1",
        "@polkadot/keyring": "^2.7.1",
        "@types/js-yaml": "^3.12.3",
        "apollo-server": "^2.12.0",
        "chalk": "^4.0.0",
        "graphql-import-node": "^0.0.4",
        "js-yaml": "^3.13.1",
        "knex": "^0.20.13"
    },
    "devDependencies": {
        "@types/node": "^13.11.0",
        "husky": "^4.2.3",
        "pm2": "^4.2.3",
        "ts-node": "^8.8.2",
        "tslint": "^6.1.1",
        "typescript": "^3.8.3"
    },
    "scripts": {
        "start": "pm2 start services/darwinia-bots.json",
        "stop": "pm2 stop services/darwinia-bots.json",
        "grammer": "ts-node src/bin/grammer.ts",
        "build": "tsc --strict",
        "lint": "tsc --noEmit && tslint -c ./tslint.json src/**/*.ts",
        "tg": "python3 src/bots/telegram_bot.py"
