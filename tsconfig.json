{
    "indent": [true, "spaces", 4],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "baseUrl": ".",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "outDir": "lib",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "es6"
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "examples",
        "node_modules"
    ]
}
